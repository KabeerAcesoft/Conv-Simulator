# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Database Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_SERVICE_ACCOUNT='{"type":"service_account","project_id":"your-project","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}'
PROJECT_ID=your-project-id

# Redis Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Security
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters-long
JWT_EXPIRES_IN=24h
COOKIE_SECRET=your-cookie-secret

# External API Keys
OPENAI_API_KEY=your-openai-api-key
LIVEPERSON_APP_KEY=your-liveperson-app-key
LIVEPERSON_APP_SECRET=your-liveperson-app-secret

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info

# Health Check Thresholds
MEMORY_HEAP_THRESHOLD=314572800
MEMORY_RSS_THRESHOLD=1073741824
DISK_THRESHOLD_PERCENT=0.9

# Application Limits
MAX_CONCURRENT_CONVERSATIONS=10
MAX_CONVERSATION_DURATION=3600000
MAX_FILE_SIZE=10485760

# Timeouts (in milliseconds)
HTTP_TIMEOUT=30000
DATABASE_TIMEOUT=10000
CACHE_TIMEOUT=5000

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Developer Account (for development/testing)
DEVELOPER_ACCOUNT_ID=your-dev-account-id