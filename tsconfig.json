{
  "compilerOptions": {
    "resolveJsonModule": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false, // Code Review - should be true
    "noImplicitAny": false, // Code Review - should be true
    "strictBindCallApply": false, // Code Review - should be true
    "forceConsistentCasingInFileNames": false, // Code Review - should be true
    "noFallthroughCasesInSwitch": false // Code Review - should be true
  }
}
